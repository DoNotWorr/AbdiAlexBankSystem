<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.TransferController"
            prefHeight="400.0" prefWidth="600.0">

    <VBox>
        <HBox>
            <Label text="Från kontonummer"/>
            <ChoiceBox fx:id="fromAccountList"/>
        </HBox>

        <HBox>
            <Label text="Till kontonummer"/>
            <TextField fx:id="toAccountNumber"/>
        </HBox>
        <HBox>
            <Label text="Belopp"/>
            <TextField fx:id="amountSek"/>
            <Label text="kr"/>
        </HBox>

        <HBox>
            <RadioButton fx:id="onCurrentDate" text="Omgående" onAction="#setInstant">
                <toggleGroup>
                    <ToggleGroup fx:id="whenTransaction"/>
                </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="onLaterDate" text="På datum" onAction="#setDelayed">
                <toggleGroup>
                    <fx:reference source="whenTransaction"/>
                </toggleGroup>
            </RadioButton>
        </HBox>
        <DatePicker fx:id="laterDatePicker" editable="false" onAction="#isFutureDate"/> <!-- editable="false" för att undvika felaktig inmatning. Kan ändras till true om inmatning valideras -->
        <HBox>
            <Button onAction="#addTransaction" text="Skapa transaktion"/>
            <Button onAction="#leaveTransaction" text="Avbryt"/>
        </HBox>
    </VBox>

</AnchorPane>
